package clasesObjetos;

public class Comedero {
	
	int cantidad;
	
	public void rellenar() {
		cantidad=5;
		System.out.println("Has rellenado el plato, hay " + cantidad + " raciones");
	}
	
	public void comer() {
		cantidad = cantidad>0 ? cantidad-- : System.out.println("Quedan " + cantidad + " raciones");
		cantidad--;
		System.out.println("Quedan " + cantidad + " raciones");
		
	}

}
